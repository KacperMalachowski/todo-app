<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="todo.app.MainWindow"
        Title="Todo App">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="My Todo List" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>
        
        <!-- Statistics Panel -->
        <Border Grid.Row="1" 
                Background="LightBlue" 
                Padding="15" 
                Margin="0,0,0,20" 
                CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Name="TotalCountLabel" 
                               Text="0" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Total Tasks" 
                               FontSize="12" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Name="CompletedCountLabel" 
                               Text="0" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="Green"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Completed" 
                               FontSize="12" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Name="PendingCountLabel" 
                               Text="0" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="Orange"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Pending" 
                               FontSize="12" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Name="OverdueCountLabel" 
                               Text="0" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="Red"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Overdue" 
                               FontSize="12" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Filter Buttons -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Primary Filters -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" 
                        Name="ShowAllButton"
                        Content="All Tasks" 
                        FontSize="14" 
                        Height="35"
                        Margin="0,0,5,0"
                        Background="DarkBlue"
                        Foreground="White"/>
                
                <Button Grid.Column="1" 
                        Name="ShowCompletedButton"
                        Content="Completed" 
                        FontSize="14" 
                        Height="35"
                        Margin="5,0,5,0"
                        Background="Gray"
                        Foreground="White"/>
                
                <Button Grid.Column="2" 
                        Name="ShowPendingButton"
                        Content="Pending" 
                        FontSize="14" 
                        Height="35"
                        Margin="5,0,0,0"
                        Background="Gray"
                        Foreground="White"/>
            </Grid>
            
            <!-- Due Date Filters -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" 
                        Name="ShowOverdueButton"
                        Content="Overdue" 
                        FontSize="14" 
                        Height="35"
                        Margin="0,0,5,0"
                        Background="Gray"
                        Foreground="White"/>
                
                <Button Grid.Column="1" 
                        Name="ShowDueTodayButton"
                        Content="Due Today" 
                        FontSize="14" 
                        Height="35"
                        Margin="5,0,0,0"
                        Background="Gray"
                        Foreground="White"/>
            </Grid>
        </Grid>
        
        <!-- Add Task Input -->
        <Grid Grid.Row="3" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Task Title and Priority Row -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0"
                         Name="NewTaskTextBox"
                         Watermark="Enter a new task..."
                         FontSize="16"
                         Height="40"
                         Margin="0,0,10,0"/>
                
                <ComboBox Grid.Column="1"
                          Name="PriorityComboBox"
                          Height="40"
                          Width="100"
                          Margin="0,0,10,0"
                          SelectedIndex="1">
                    <ComboBoxItem Content="Low"/>
                    <ComboBoxItem Content="Medium"/>
                    <ComboBoxItem Content="High"/>
                </ComboBox>
                
                <Button Grid.Column="2"
                        Name="AddTaskButton"
                        Content="Add Task"
                        FontSize="16"
                        Height="40"
                        Width="100"
                        Background="CornflowerBlue"
                        Foreground="White"/>
            </Grid>
            
            <!-- Due Date Row -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <DatePicker Grid.Column="0"
                            Name="DueDatePicker"
                            FontSize="14"
                            Height="35"
                            Margin="0,0,10,0"/>
                
                <Button Grid.Column="1"
                        Name="ClearDueDateButton"
                        Content="Clear Date"
                        FontSize="14"
                        Height="35"
                        Width="100"
                        Background="Gray"
                        Foreground="White"/>
            </Grid>
        </Grid>
        
        <!-- Todo List -->
        <ScrollViewer Grid.Row="4">
            <StackPanel Name="TodoListPanel">
                <!-- Tasks will be added dynamically -->
            </StackPanel>
        </ScrollViewer>
        
    </Grid>
    
</Window>
